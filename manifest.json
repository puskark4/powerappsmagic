{
  "manifest_version": 3,
  "name": "PowerApps Copilot Popup Blocker",
  "version": "1.0",
  "description": "Hide the draft with Copilot popup when editing PowerApps applications",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://make.powerapps.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://make.powerapps.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PowerApps Copilot Popup Blocker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}